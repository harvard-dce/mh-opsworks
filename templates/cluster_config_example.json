{
  "region": "us-east-1",
  "vpc": {
    "name": "FILL_ME_IN",
    "cidr_block": "FILL_ME_IN"
  },
  "stack": {
    "name": "FILL_ME_IN",
    "service_role": {
      "name": "mh-opsworks-cluster-service-role"
    },
    "chef": {
      "custom_json": {},
      "custom_cookbooks_source": {
        "type": "git",
        "url": "https://github.com/harvard-dce/mh-opsworks-berkshelf"
      }
    },
    "layers": [
      {
        "name": "All in one",
        "shortname": "all-in-one",
        "type": "custom",
        "enable_auto_healing": false,
        "auto_assign_elastic_ips": true,
        "install_updates_on_boot": true,
        "auto_assign_public_ips": true,
        "packages": [
          "maven2",
          "openjdk-7-jdk",
          "openjdk-7-jre",
          "gstreamer0.10-plugins-base",
          "gstreamer0.10-plugins-good",
          "gstreamer0.10-tools",
          "gstreamer0.10-plugins-bad",
          "gstreamer0.10-plugins-ugly",
          "libglib2.0-dev",
          "mysql-client",
          "gzip",
          "tesseract-ocr"
        ]
      },
      {
        "name": "MySQL db",
        "shortname": "mysql-db",
        "enable_auto_healing": true,
        "install_updates_on_boot": true,
        "type": "db-master",
        "auto_assign_public_ips": true,
        "attributes": {
          "MysqlRootPasswordUbiquitous": "true"
        },
        "instances": {
          "count": 1,
          "instance_type": "t2.micro",
          "root_device_type": "ebs"
        }
      }
    ],
    "users": [
      {
        "user_name": "FILL_ME_IN",
        "level": "FILL_ME_IN: one of: deny show deploy manage iam_only",
        "allow_ssh": true,
        "allow_sudo": true,
        "ssh_public_key": "The public key for this user"
      }
    ]
  }
}
